<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--除标题栏-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--上部-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="当前温度"/>


            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="65dp"
                android:text="00.00ºC"
                android:textSize="70sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hint_text"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="57dp"
                android:text="将在00:00分钟后开始加热" />

        </RelativeLayout>
        <!--下部-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Switch
                android:layout_width="260dp"
                android:id="@+id/on_off_switch"
                android:paddingLeft="40dp"
                android:layout_height="wrap_content"
                android:thumb="@drawable/my_thumb"
                android:track="@drawable/switch_selector"
                android:text="加热器状态"
                android:textSize="20sp"
                android:textColor="#737373"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/appoint"
                android:layout_height="wrap_content"
                android:layout_below="@id/on_off_switch"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:paddingLeft="40dp"
                android:text="预约时间"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appoint"
                android:layout_marginTop="30dp"
                android:id="@+id/time"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:text="加热时间"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sv"
                android:layout_below="@id/time"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:paddingLeft="40dp"
                android:text="加热温度"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appoint_selector"
                android:text="00:00:00"
                android:clickable="true"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:layout_below="@id/on_off_switch"
                android:layout_toRightOf="@id/appoint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_selector"
                android:text="00:00:00"
                android:clickable="true"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@id/time"
                android:layout_below="@id/appoint_selector" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sv_selector"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="60dp"
                android:clickable="true"
                android:text="00.00ºC"
                android:textSize="20sp"
                android:layout_toRightOf="@id/sv"
                android:layout_below="@id/time_selector"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_below="@id/sv">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="设定"
                    android:id="@+id/sheding"
                    android:background="@drawable/my_thumb"
                    />
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/pause"
                    android:checked="false"
                    android:textOn="开始加热"
                    android:textOff="暂停加热"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/my_thumb"
                    android:layout_toRightOf="@id/sheding"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
